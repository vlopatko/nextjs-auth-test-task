{
  "name": "nextjs-auth-test-task",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": " next dev",
    "devvv": "(if exist .next rd /s /q .next 2>nul) && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-all": "npm run lint && npx lint-staged && npm run check-types && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write . && git add -A ."
    }
  },
  "lint-staged": {
    "src/app/**/*.{ts,tsx,html,css}": "prettier --write",
    "src/components/**/*.{ts,tsx,html,css}": "prettier --write",
    "src/app/**/*.{ts,tsx}": "eslint",
    "src/components/**/*.{ts,tsx}": "eslint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "next": "13.5.6",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^8.1.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "autoprefixer": "^10",
    "eslint": "^8.52.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3",
    "typescript": "^5"
  }
}
